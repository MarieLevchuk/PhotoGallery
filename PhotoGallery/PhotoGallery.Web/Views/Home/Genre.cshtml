
@{
    ViewBag.Title = "Genre";
}
@model PhotoGallery.Web.Models.GenreViewModel

<header class="my_header_genre_page" style="height: 100px;">
    <div class="my_container">
        <div class="header_inner_genre_page">
            <img class="header_logo" src="~/Content/source/logo.png">
            <nav class="my_nav"> <a class="nav_link" href="/Home/Index">Home</a> <a class="nav_link" href="#">Search</a> </nav>
            <!--end nav-->
            <div class="my_title">
                <div class="sharp"> #</div>
                <h1>@Model.Name</h1>
            </div>
        </div>
        <!--end header inner-->
    </div>
    <!--my_container-->
</header>
<div class="photos_tile">
    <div class="my_container">
        <div class="photos_tile_inner">
            @foreach (var photo in Model.Photos)
            {
                <div class="item" style="background: url(@photo.Path) center no-repeat; background-size: cover;"> </div>
            }            
        </div>
    </div>
</div>


